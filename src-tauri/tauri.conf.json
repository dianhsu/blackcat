{
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "blackcat",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "cli":{
      "description": "You may run this command to connect to the server",
      "longDescription": "",
      "args": [
        {
          "name": "host",
          "short": "h",
          "description": "The host to connect to",
          "takesValue": true
        },
        {
          "name": "port",
          "short": "p",
          "description": "The port to connect to",
          "takesValue": true
        },
        {
          "name": "user",
          "short": "u",
          "description": "The user to connect with",
          "takesValue": true
        },
        {
          "name": "password",
          "short": "P",
          "description": "The password to connect with",
          "takesValue": true
        }, {
          "name": "verbose",
          "short": "v",
          "description": "Prints more information"
        }
      ]
    },
    "windows": [
      {
        "title": "blackcat",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.tauri.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
